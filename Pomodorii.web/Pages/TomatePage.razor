@*affiche le détail d'une tomate*@
@page "/tomate/{tomateId:int}"
@inherits TomatePageBase

@*busy indicator en attendant la fin de la requete*@
@if (isBusy)
{
    <div class="busy"></div>
}
else
{
    @*si aucune tomate n'est trouvée'*@
    @if (Tomate == null || notFound)
    {
        <div class="my-5 text-center">
            <div class="info-header mb-5">
                <h1>aucune tomate trouvée :(</h1>
                <img src="img/TomateTriste.png" alt="tomate" class="img-fluid w-30 mb-3">
                <p>
                    <a class="btn btn-danger" href="/mestomates">Retour</a>
                </p>
            </div>
        </div>
    }
    @* sinon on affiche la fiche détaillée de la tomate*@
    else
    {
        <div class="row">
            <div class="col-sm">
                <img src="@ImgTomate" alt="tomate" class="img-fluid w-30 mb-3">
            </div>
            <div class="col-sm">
                <h1>@Tomate.Nom</h1>
                <h2>@Tomate.Description</h2>
            </div>
        </div>

        <br>
        <br>

        <div class="d-flex justify-content-between align-items-center mb-3 mt-1">
            <div className="form-group">
                <a class="btn btn-danger" href="/mestomates">
                    Retour
                </a>
                <a class="btn btn-primary m-4" href="@($"tomateEdit/{Tomate.Id}")">Modifier</a>

            </div>
            <Button class="btn btn-warning" @onclick="DeleteTomate">Supprimer</Button>
        </div>
    }
}
