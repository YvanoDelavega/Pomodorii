@page "/messemis"
@inherits SemisListPageBase

@*affiche les semis *@
<div class="my-5 text-center">
    <div class="info-header mb-5">
        <h1>Mes semis</h1>
    </div>
</div>


@if (Semis == null)
{
    // busy indicator qui apparait tant que les tomates ne sont pas chargées
    <div class="busy"></div>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th class="col-Laptop">Date</th>
                <th class="col-Laptop">Variété</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Semis)
            {
                <tr key={s.id}>
                    <td class="col-Laptop">@s.Date.ToShortDateString()</td>
                    <td class="col-Laptop">@(s.Tomate != null ? s.Tomate.Nom : "?")</td>
                </tr>
            }
        </tbody>
    </table>
}



<a class="btn btn-danger" href="/mestomates">
    Retour
</a>